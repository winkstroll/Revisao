int opcao;
int quero=1;
float conta=0;
float menu (){
     setlocale(LC_ALL,"Portuguese");
     
	 
while(quero==1){
printf("Escolha uma das opções abaixo: \n");

printf(" PERECÍVEIS\n");
printf(" 1-ARROZ\n");
printf(" 2-Feijão\n");
printf(" 3-Soja\n");
printf(" 4-Macarrão\n");
printf(" ENLATADO\n");
printf(" 5-Milho\n");
printf(" 6-Ervilha\n");
printf(" 7-Atum\n");
scanf("%d",&opcao);
switch(opcao){
	case 1:
		conta=conta+2.30;
		break;
	case 2:
		conta=conta+2.70;
		break;
	case 3:
		conta=conta+5.00;
		break;
	case 4:
		conta=conta+3.00;
		break;
	
	
	
}







printf("Deseja continuar se sim pressione 1 se não 0:\n");
scanf("%d",&quero);

}
	 	return conta;
	 	


}

