int quero2=1;
float conta=0;
float menu (){
  setlocale(LC_ALL,"Portuguese");
  
while(quero==1){
for(int i=0;i<4;i++){

printf("%d- %s \t %.2f\n", i+1, pereciveis[i].nome, pereciveis[i].preco);

}
  scanf("%d",&opcao);
  switch(opcao){
    case 1:
    conta=conta + 5.70;
    break;
    case 2:
    conta=conta + 7.00;
    break;
    case 3:
    conta=conta + 10.00;
    break;
    case 4:
    conta=conta + 6.00;
    break;
    
  }



  
  
  printf("Deseja continuar se sim pressione 1 se não 0:\n");
scanf("%d",&quero);
  }
if(idade>=18){

while(quero2==1){
for(int j=0;j<4;j++){

printf("%d- %s \t %.2f\n", j+1, alcoolico[j].nome, alcoolico[j].preco);

}
  scanf("%d",&confi);
  switch(confi){
    case 1:
    conta=conta + 11.00;
    break;
    case 2:
    conta=conta + 12.00;
    break;
    case 3:
    conta=conta + 13.00;
    break;
    case 4:
    conta=conta + 14.00;
    break;
    
  }

  
  
  printf("Deseja continuar se sim pressione 1 se não 0:\n");
scanf("%d",&quero2);
  }

  
}
  
return conta;	

}
	 	


